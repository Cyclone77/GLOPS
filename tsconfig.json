{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@glui/*": [ "app/components/ui/*" ],
      "@glprj/*": [ "app/components/prj/*" ],
      "@glother/*": [ "app/components/other/*" ],
      "@glform/*": [ "app/components/formitem/*" ],
      "@glclass/*": [ "app/classes/*" ],
      "@glservice/*": [ "app/services/*" ],
      "@glutil/*": [ "app/util/*" ]
    }
  }
}
